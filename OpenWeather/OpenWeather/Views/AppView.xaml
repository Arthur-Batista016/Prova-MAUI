<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenWeather.Views.AppView">
    <ScrollView>
        <VerticalStackLayout>
        <Image
            Source="logo.png"
            HeightRequest="200"
            />

        <Label 
            Text="DIGITE O NOME DA SUA CIDADE OU A LOCALIZAÇÂO DO GPS PARA VISUALIZAR AS CONDIÇÕES METEREOLÓGICAS"
            HorizontalOptions="Center"
            Margin="0,60,0,0"
           />

        <Entry
            Placeholder="Digite o Local"
            WidthRequest="600"
            />

        <Button
            Text="BUSCAR INFOS"
            WidthRequest="300"
            Margin="0,40,0,0"
            />

            <Label
                x:Name="exibicao"
                
                />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>